<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/background"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dip"
        android:layout_marginLeft="4sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/summonerName"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/summonerSpell2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dip"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/championName"
        android:layout_below="@+id/summonerName"
        android:layout_alignStart="@+id/summonerName"
        android:layout_alignEnd="@+id/summonerName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dip"
        android:layout_marginLeft="4sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/masteries"
        android:layout_below="@+id/summonerName"
        android:layout_marginTop="39dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/tier"
        android:layout_alignEnd="@+id/championName" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dip"
        android:layout_marginLeft="4sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/runes"
        android:layout_below="@+id/masteries"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/background"
        android:layout_alignEnd="@+id/masteries" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/summonerSpell1"
        android:layout_alignTop="@+id/summonerSpell2"
        android:layout_toStartOf="@+id/summonerSpell2"
        android:layout_marginEnd="31dp" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/summonerSpell2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/ultimate"
        android:layout_alignTop="@+id/summonerSpell2"
        android:layout_toEndOf="@+id/summonerSpell2"
        android:layout_marginStart="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        
        android:id="@+id/tierDivision"
        android:layout_below="@+id/championName"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/summonerSpell2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tier"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/summonerSpell2"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/championName" />

</RelativeLayout>