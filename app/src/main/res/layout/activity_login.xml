<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/login_background"
    android:clickable="true"
    android:focusable="true"
    tools:context="com.grupp32.freeelo.LoginActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:id="@+id/okButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#5d5c5c"
        android:background="@drawable/edittext_style"
        android:layout_margin="10dp"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/region"
        android:background="@drawable/edittext_style"
        android:layout_toStartOf="@+id/okButton"
        android:layout_alignTop="@+id/okButton"
        android:layout_alignBottom="@+id/okButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/summonerName"
        android:hint="@string/summoner_name"
        android:textColor="#5d5c5c"
        android:textAlignment="center"
        android:textSize="24sp"
        android:imeOptions="actionDone"
        android:lines="1"
        android:textColorHint="#E0E0E0"
        android:background="@drawable/edittext_style"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_above="@+id/okButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
